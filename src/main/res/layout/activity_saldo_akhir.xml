<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ivcode.donasisesama.saldo_akhir">

    <TextView
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Data Donasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lb1"
            android:text="Jumlah Data : "
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_saldo_jumlah"
            android:layout_toRightOf="@id/lb1"
            android:text="-"
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lb2"
            android:layout_below="@id/lb1"
            android:text="Total Donasi :"
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_saldo_total_donasi"
            android:layout_below="@id/lb1"
            android:layout_toRightOf="@id/lb2"
            android:text="-"
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Data Penyaluran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lb3"
            android:text="Jumlah Data : "
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_saldo_jumlah_penyaluran"
            android:layout_toRightOf="@id/lb3"
            android:text="-"
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lb4"
            android:layout_below="@id/lb3"
            android:text="Total Donasi :"
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_saldo_total_penyaluran"
            android:layout_below="@id/lb3"
            android:layout_toRightOf="@id/lb4"
            android:text="-"
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:text="Rp. "
        android:textColor="#1ea300"
        android:id="@+id/txt_saldo_akhir"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:text="Keterangan Kelayakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lb5"
            android:text="Kelayakan : "
            android:layout_width="95dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_saldo_kelayakan"
            android:layout_toRightOf="@id/lb5"
            android:text="-"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
